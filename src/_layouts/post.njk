---
layout: base.njk
---

<!-- Reading Progress Indicator -->
<div class="reading-progress">
    <div class="reading-progress-bar"></div>
</div>

<!-- Breadcrumbs Navigation -->
<nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="breadcrumbs-container">
        <ol class="breadcrumbs-list">
            <li class="breadcrumb-item">
                <a href="{{ '/' | baseUrl }}" class="breadcrumb-link">Home</a>
                <span class="breadcrumb-separator" aria-hidden="true">→</span>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ '/blog/' | baseUrl }}" class="breadcrumb-link">Thoughts</a>
                <span class="breadcrumb-separator" aria-hidden="true">→</span>
            </li>
            <li class="breadcrumb-item">
                <span class="breadcrumb-current" aria-current="page">{{ title }}</span>
            </li>
        </ol>
    </div>
</nav>

<article class="post" data-reading-time>
    <header class="post-header">
        <div class="container container--narrow">
            {% if date %}
            <time class="post-date" datetime="{{ date | dateISO }}">
                {{ date | dateFormat }}
            </time>
            {% endif %}
            
            <h1 class="post-title">{{ title }}</h1>
            
            {% if description %}
            <p class="post-excerpt">{{ description }}</p>
            {% endif %}
            
            <!-- Enhanced Article Metadata -->
            <div class="article-meta">
                {% if author %}
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span class="meta-label">Author:</span>
                    <span class="meta-value">{{ author }}</span>
                </div>
                {% endif %}
                
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span class="meta-label">Reading Time:</span>
                    <span class="meta-value post-reading-time">5 min read</span>
                </div>
                
                {% if tags and tags.length > 0 %}
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                        <line x1="7" y1="7" x2="7.01" y2="7"></line>
                    </svg>
                    <span class="meta-label">Category:</span>
                    <span class="meta-value">
                        {% for tag in tags %}
                        {% if tag != "blog" %}{{ tag | capitalize }}{% endif %}
                        {% endfor %}
                    </span>
                </div>
                {% endif %}
            </div>
            
            {% if tags and tags.length > 0 %}
            <div class="post-tags">
                {% for tag in tags %}
                {% if tag != "blog" %}
                <span class="tag">{{ tag }}</span>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        <div class="container container--narrow">
            {{ content | safe }}
        </div>
    </div>
    
    <footer class="post-footer">
        <div class="container container--narrow">
            <nav class="post-navigation" aria-label="Post navigation">
                <a href="{{ '/blog/' | baseUrl }}" class="btn btn--outline">
                    ← Back to Thoughts
                </a>
            </nav>
        </div>
    </footer>
</article>

<!-- Related Content Section -->
<section class="related-content">
    <div class="related-content-header">
        <h2 class="related-content-title">Continue Your Exploration</h2>
        <p class="related-content-subtitle">Discover more about Bauhaus principles and their contemporary applications</p>
    </div>
    <div class="related-grid">
        <a href="{{ '/projects/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">Bauhaus Principles</h3>
                <p class="card-description">Explore how form follows function through interactive demonstrations</p>
                <div class="card-footer">
                    <span class="card-link">View Projects →</span>
                </div>
            </div>
        </a>
        <a href="{{ '/blog/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">More Articles</h3>
                <p class="card-description">Deep-dive into Bauhaus history, legacy, and contemporary influence</p>
                <div class="card-footer">
                    <span class="card-link">Read More →</span>
                </div>
            </div>
        </a>
        <a href="{{ '/about/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">About Bauhaus</h3>
                <p class="card-description">Learn about the complete history from 1919 to its lasting global impact</p>
                <div class="card-footer">
                    <span class="card-link">Learn More →</span>
                </div>
            </div>
        </a>
    </div>
</section>

<style>
/* Post-specific styles */
.post-header {
    padding: var(--spacing-xl) 0 var(--spacing-lg);  /* Reduced from 3xl/2xl to xl/lg (32px/24px) */
    border-bottom: 1px solid var(--color-border);
}

.post-date {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);  /* Reduced from sm to xs (4px) */
}

.post-title {
    font-size: var(--font-size-3xl);  /* Reduced from 4xl (40px) to 3xl (32px) */
    font-weight: 900;
    line-height: 1.1;
    margin: var(--spacing-sm) 0;  /* Reduced from md to sm (8px) */
    color: var(--color-text);
}

.post-excerpt {
    font-size: var(--font-size-lg);  /* Reduced from xl (20px) to lg (18px) */
    color: var(--color-text-secondary);
    margin: var(--spacing-md) 0;  /* Reduced from lg to md (16px) */
    line-height: 1.6;
}

.post-meta {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: var(--spacing-lg) 0;
}

.post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
}

.post-content {
    padding: var(--spacing-xl) 0;  /* Reduced from 3xl (64px) to xl (32px) */
}

.post-content h2 {
    margin-top: var(--spacing-xl);  /* Reduced from 3xl (64px) to xl (32px) */
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    font-size: var(--font-size-2xl);
    font-weight: 700;
}

.post-content h3 {
    margin-top: var(--spacing-lg);  /* Reduced from 2xl (48px) to lg (24px) */
    margin-bottom: var(--spacing-sm);  /* Reduced from md (16px) to sm (8px) */
    font-size: var(--font-size-xl);
    font-weight: 600;
}

.post-content p {
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 for tighter text */
}

.post-content ul,
.post-content ol {
    margin: var(--spacing-md) 0;  /* Reduced from lg (24px) to md (16px) */
    padding-left: var(--spacing-lg);  /* Reduced from xl (32px) to lg (24px) */
}

.post-content li {
    margin-bottom: var(--spacing-xs);  /* Reduced from sm (8px) to xs (4px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 */
}

.post-content code {
    background: var(--color-surface-raised);
    padding: 0.125rem 0.375rem;
    border-radius: 0;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
}

.post-content pre {
    background: var(--color-surface-raised);
    padding: var(--spacing-lg);
    border-radius: 0;
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
}

.post-content pre code {
    background: none;
    padding: 0;
}

.post-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    font-style: italic;
    color: var(--color-text-secondary);
}

.post-footer {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
    border-top: 1px solid var(--color-border);
}

.post-navigation {
    display: flex;
    justify-content: center;
}

/* Responsive */
@media (max-width: 768px) {
    .post-title {
        font-size: var(--font-size-3xl);
    }
    
    .post-excerpt {
        font-size: var(--font-size-lg);
    }
}
</style>
